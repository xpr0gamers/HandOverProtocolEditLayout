<mvc:View controllerName="sap.Beutlhauser.HandOverProtocolEditLayout.controller.SortCriteriasDialog"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc">
    <Dialog>
        <customHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <Text text="Kriterien Sortieren"></Text>
                <ToolbarSpacer/>
            </Toolbar>
        </customHeader>
        <beginButton>
            <Button text="SchlieÃŸen" press="onCloseDialog"/>
        </beginButton>
        <endButton>
            <Button type="Accept" text="Speichern" press="onSaveOrder" icon="sap-icon://save"/>
        </endButton>
        <Title level="H1" text="{/oHeadlineItem/GroupLabel}" width="100%" textAlign="Center"/>
        <Table width="290px"
               id="tableSortCriterias"
               items="{path: '/oHeadlineItem/CriteriaItemSet', templateShareable: false}"
               backgroundDesign="Solid"
               class="sapUiSizeCompact">
            <columns>
                <Column width="45px"></Column>
                <Column width="200px"></Column>
                <Column width="45px"></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Button icon="sap-icon://arrow-bottom" press="onDown"/>
                        <Input editable="false"
                               value="{Bezeichnung}">
                        </Input>
                        <Button icon="sap-icon://arrow-top" press="onUp"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Dialog>
</mvc:View>